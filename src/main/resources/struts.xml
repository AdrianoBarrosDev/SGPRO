<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
    
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	
    <package name="default" namespace="/" extends="struts-default">
    
        <action name="criarUsuario" class="com.adrianobarrosdev.controller.UserAction" method="create">
            <result name="success">/success.jsp</result>
        </action>
        <action name="validarLogin" class="com.adrianobarrosdev.controller.ValidarLoginAction">
        	<result name="sistemaPessoa">pessoa/dashboard.jsp</result>
        	<result name="sistemaEmpresa">empresa/dashboard.jsp</result>
        	<result name="input">/login.jsp</result>
        </action>
        
    </package>
</struts>